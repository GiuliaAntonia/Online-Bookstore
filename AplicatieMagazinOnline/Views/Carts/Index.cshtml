@{
    ViewBag.Title = "Index";
}

<h2>Cos</h2>
<br />
@if (ViewBag.Message != null)
{
    <h2 class="alert-success p-3 rounded-3 text-center mb-5">@ViewBag.Message</h2>
}

@foreach (var cart in ViewBag.CartBooks)
{
    
        <div class="card flex-row" style="height:20vh;overflow: auto;">
       @* <img src="/images/@Model.Image" alt="Poza" style="height:17rem; width:13rem;" />*@
            <img class="card-img-left card-img-responsive" src="/images/@cart.Book.Image" alt="Poza" style="width:15vw">
            <div class="card-body border">




                <div><i class="bi bi-globe"></i> @cart.Book.Category.CategoryName</div>

                <div class="d-flex justify-content-between flex-row">
                    <p class="card-text">@cart.Book.Title </p>
                    <p class="card-text">@cart.Book.Price lei</p>
                </div>

                <div class="d-flex justify-content-center flex-row mt-2 mb-2">


                    <a class="btn btn-primary" href="/Carts/Decrease/?id=@cart.CartID&BookID=@cart.Book.BookID"><i class="bi bi-dash"></i></a>
                    <p class="card-text m-2">@cart.Quantity</p>
                    <a class="btn btn-primary" href="/Carts/Increase/?id=@cart.CartID&BookID=@cart.Book.BookID"><i class="bi bi-plus-lg"></i></a>


                </div>

                <div class="d-flex justify-content-between flex-row mt-2 mb-2">
                    <a class="btn btn-danger" href="/Carts/Delete/?id=@cart.CartID&BookID=@cart.Book.BookID">Sterge carte din cos</a>
                    <a class="btn btn-primary" href="/Books/Show/@cart.Book.BookID">Afisare carte</a>

                </div>
            </div>
        </div>
        <br />
    

}

<div class="d-flex justify-content-between flex-row mt-2 mb-2">
    <p class="card-text d-flex justify-content-center rounded px-2 py-1 bg-success text-light">@ViewBag.TotalPrice lei</p>

    <a class="btn btn-outline-success" href="/Books/Index" onclick="myFunction()"> <i class="bi bi-send"></i>Finalizati Comanda</a>
    <script>
        function myFunction() {
          alert("Comanda a fost plasata cu succes!");
        }
    </script>
</div>



